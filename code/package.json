{
  "name": "app-package-name",
  "version": "0.1.0-SNAPSHOT",
  "description": "AMIGA Fwk Web SPA, Microfrontend Shell",
  "license": "UNLICENSED",
  "scripts": {
    "build": "cross-env NODE_ENV=production AMG_CLI_OUTPUT_PATH=./dist node_modules/webpack-cli/bin/cli.js --config ./config/webpack.config.js --mode production",
    "build:snapshot": "cross-env NODE_ENV=development AMG_CLI_OUTPUT_PATH=./dist node_modules/webpack-cli/bin/cli.js --config ./config/webpack.config.js --mode development",
    "bump:snapshot": "npm version $npm_package_version.$(date \"+%s\")",
    "lint": "eslint \"./{src,test}/**/*.{ts,tsx}\"",
    "lint:report": "npm run lint -- --format @inditex/eslint-formatter-inditex",
    "lint:fix": "npm run lint -- --fix",
    "format": "npm run lint -- --quiet --fix --fix-type layout",
    "package": "echo \"no packaging needed\"",
		"prepare": "cd .. && husky install code/.husky",
    "post:provisioning": "npm i",
    "project:analysis": "amiga-fwk-web project-analysis -o ./dist/project-analysis.yml",
		"release:prepare": "npm run verify && npm run project:analysis && npm run package",
    "start": "cross-env NODE_ENV=development AMG_HTTPS=true AMG_CLI_PORT=3029 AMG_CLI_HOST=0.0.0.0 AMG_CLI_JSON_API_DELAY=250 AMG_CLI_BASE_PATH=/SPAGRENE/web/ AMG_CLI_CONFIGMAP_PATH=./../paas/config_paas/configmap_local.yml BUILD_MODE=devServer node_modules/webpack-dev-server/bin/webpack-dev-server.js --config ./config/webpack.config.js --hot --mode development",
    "start:standalone": "cross-env NODE_ENV=development AMG_CLI_PORT=3029 AMG_CLI_HOST=0.0.0.0 AMG_HTTPS=true AMG_CLI_API_DELAY=250 AMG_CLI_BASE_PATH=/SPAGRENE/web/ AMG_CLI_CONFIGMAP_PATH=./../paas/config_paas/configmap_standalone.yml BUILD_MODE=devServer node_modules/webpack-dev-server/bin/webpack-dev-server.js --config ./config/webpack.config.js --hot --mode development",
    "test": "npm run test:unit",
    "test:base": "cross-env NODE_ENV=test node --expose-gc --no-compilation-cache ./node_modules/jest/bin/jest.js --logHeapUsage --config ./config/jest.config.js --colors --rootDir . --passWithNoTests",
		"test:unit": "npm run test:base -- --maxWorkers=4 --coverage",
		"test:verify" : "npm run test:base -- ${TOTAL_CPUS:+--maxWorkers=$((TOTAL_CPUS-1))} --coverage",
		"test:watch": "npm run test:base -- --watchAll",
    "verify": "npm ci && npm run build && npm run lint:report && npm run test:verify",
    "verify:snapshot": "npm ci && npm run build:snapshot && npm run lint:report && npm run test:verify",
    "version:development": "npm version $(npm version minor)-SNAPSHOT",
    "version:release": "npm version $RELEASE_VERSION -m \"[npm-scripts] prepare release $RELEASE_VERSION\" --tag-version-prefix \"\""
  },
  "lint-staged": {
    "(src|test)/**/*.(ts|tsx)": [
      "eslint"
    ]
  },
  "eslintConfig": {
    "root": true
  },
